{
    "tslint.enable": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules": false,
        "**/*.sqlite": true,
        "**/dist": false,
        "**/dist-es": true,
        "**/*.map": {
            "when": "$(basename)"
        },
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*?.js": {
            "when": "$(basename).tsx"
        }
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.map": true,
        "**/build": true,
        "**/dist": true,
        "**/dist-es": true,
        "**/dist-test": true,
        "src/**/*.js": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "movets.skipWarning": false,
    "prettier.semi": false,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "editor.formatOnSave": true,
    "prettier.printWidth": 100
}
